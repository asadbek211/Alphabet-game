            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_wheel_right"
            app:layout_constraintBottom_toBottomOf="@+id/train"
            app:layout_constraintEnd_toEndOf="@+id/train"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="@+id/train"
            app:layout_constraintTop_toTopOf="@+id/train"
            app:layout_constraintVertical_bias="0.832" />

        <ImageView
            android:id="@+id/trainWheelRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_wheel_right"
            app:layout_constraintBottom_toBottomOf="@+id/train"
            app:layout_constraintEnd_toEndOf="@+id/train"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/train"
            app:layout_constraintTop_toTopOf="@+id/train"
            app:layout_constraintVertical_bias="0.832" />

        <ImageView
            android:id="@+id/trainWheelQismiRight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wheel_qismi_right"
            app:layout_constraintBottom_toBottomOf="@+id/trainWheelRight1"
