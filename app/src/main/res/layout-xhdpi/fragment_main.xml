            app:layout_constraintTop_toTopOf="@+id/train"
            app:layout_constraintVertical_bias="0.832" />

        <ImageView
            android:id="@+id/trainWheelQismi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
