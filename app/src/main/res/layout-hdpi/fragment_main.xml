            android:layout_height="wrap_content"
            android:src="@drawable/ic_wheel_qismi_right"
            app:layout_constraintBottom_toBottomOf="@+id/trainWheelRight1"
            app:layout_constraintEnd_toEndOf="@+id/trainWheelRight2"
            app:layout_constraintStart_toStartOf="@+id/trainWheelRight1"
            app:layout_constraintTop_toTopOf="@+id/trainWheelRight1" />

        <ImageView
            android:id="@+id/trainWheelRight3"
            android:layout_width="10.4518dp"
            android:layout_height="10.4518dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_wheel_right"
            app:layout_constraintBottom_toBottomOf="@+id/train"
            app:layout_constraintEnd_toEndOf="@+id/train"
            app:layout_constraintHorizontal_bias="0.68"
