            app:layout_constraintBottom_toBottomOf="@+id/trainWheel1"
            app:layout_constraintEnd_toEndOf="@+id/trainWheel2"
            app:layout_constraintStart_toStartOf="@+id/trainWheel1"
            app:layout_constraintTop_toTopOf="@+id/trainWheel1" />

        <ImageView
            android:id="@+id/trainWheel3"
            android:layout_width="13.251dp"
            android:layout_height="13.251dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/ic_wheel"
            app:layout_constraintBottom_toBottomOf="@+id/train"
            app:layout_constraintEnd_toEndOf="@+id/train"
            app:layout_constraintHorizontal_bias="0.22"
